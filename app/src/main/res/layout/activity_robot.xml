<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:id="@+id/r1_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title"
        >
        <Button
            android:text="返回"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:onClick="chat_back"
            android:layout_alignParentBottom="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小安"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>
        <ImageButton
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:id="@+id/right_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r1_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_add_send"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="发送"/>
        <EditText
            android:textSize="18sp"
            android:id="@+id/et_sendmessage"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_toLeftOf="@id/btn_add_send"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_listView"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:stackFromBottom="true"
        android:scrollbarStyle="outsideOverlay"
        android:cacheColorHint="#0000"
        android:layout_below="@+id/r1_layout"
        android:layout_above="@+id/r1_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
